<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignUpScreenFragment">

    <TextView
        android:id="@+id/create_account"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="65dp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp"
        android:text="Create Account"
        android:textAppearance="@style/create_account" />

    <TextView
        android:id="@+id/to_get_started_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="96dp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp"
        android:text="to get started now!"
        android:textAppearance="@style/to_get_started_now" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="173dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="First Name"
            android:inputType="text|textPersonName"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/last_name"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="173dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="text|textPersonName"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:layout_toRightOf="@id/first_name"
            android:layout_marginStart="10dp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/date_of_birth"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Date of Birth (e.g. 17/05/1998)"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="225dp"
            android:layout_toRightOf="@id/date_of_birth"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/street_address"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="277dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Street Address"
            android:inputType="text|textPostalAddress"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="329dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="City"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/country"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="329dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Country"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:layout_toRightOf="@id/city"
            android:layout_marginStart="10dp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/zip_postal_code"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="381dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Zip/Postal Code"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/email_address"
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="381dp"
            android:layout_toRightOf="@id/zip_postal_code"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="text|textEmailAddress"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="433dp"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Password"
            android:inputType="text|textVisiblePassword"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="433dp"
            android:layout_toRightOf="@id/password"
            android:background="@drawable/input_boxes"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="text|textVisiblePassword"
            android:paddingLeft="8dp"
            android:textColorHint="#70FFFFFF"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"/>
    </RelativeLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/sign_up_button_2"
        android:text="Sign Up"
        android:textSize="12sp"
        android:textColor="#28143D"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line_left"
        android:layout_width="95dp"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="635dp"
        android:background="@drawable/line" />

    <View
        android:id="@+id/line_right"
        android:layout_width="95dp"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="270.02dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="635dp"
        android:background="@drawable/line" />


    <TextView
        android:id="@+id/already_have_an_account"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="627dp"
        android:gravity="top"
        android:text="Already have an account?"
        android:textAppearance="@style/already_have_an_account" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="670dp"
        android:background="@drawable/login_button"
        android:text="Login"
        android:textSize="12sp"
        android:textColor="#28143D"
        android:textStyle="bold"/>
</FrameLayout>