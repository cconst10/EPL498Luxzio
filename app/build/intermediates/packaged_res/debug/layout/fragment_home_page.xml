<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <RelativeLayout
        android:id="@+id/darkerGrayishPurpleSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#343331"
        android:gravity="center">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="120dp"
            android:src="@drawable/luxziologo" />

        <ImageView
            android:id="@+id/settingsbutton"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/settingsicon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/darkPurpleSection"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_weight="2"
            android:layout_marginTop="120dp"
            android:background="#434055">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:text=" Welcome to Luxzio!"
                android:textColor="#E0FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/questrialfont"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:layout_alignParentTop="true"
                android:text="Let's find your next accommodation"
                android:textColor="#E0FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/questrialfont"/>

            <!-- Form Section -->
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="310dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/darkPurpleSection"
                android:background="#813051"
                android:padding="20dp"
                tools:ignore="NotSibling">

                <EditText
                    android:id="@+id/enterLocationField"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/questrialfont"
                    android:hint="Enter Location"
                    android:textColor="#434055"
                    android:textColorHint="#70020101"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/checkInDateField"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/enterLocationField"
                    android:layout_marginTop="21dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="Check In Date"
                    android:textColorHint="#70020101"
                    android:textColor="#434055"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/checkOutDateField"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:textSize="12sp"
                    android:layout_height="40dp"
                    android:layout_below="@id/enterLocationField"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="21dp"
                    android:layout_toRightOf="@id/checkInDateField"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="Check Out Date"
                    android:textColorHint="#70020101"
                    android:textColor="#434055"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/adultsChildrenRoomsField"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/checkInDateField"
                    android:layout_marginTop="17dp"
                    android:background="@android:color/white"
                    android:hint="# of Adults , # of Children , # of Rooms"
                    android:textColorHint="#70020101"
                    android:textSize="12sp"
                    android:textColor="#434055"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/search_button"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="200dp"
                    android:background="#462456"
                    android:text="Search"
                    android:textSize="12sp"
                    android:textColor="#E0FFFFFF" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/best_quality_hotels_in_cyprus"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="520dp"
            android:text="Best Quality Hotels in Cyprus"
            android:textColor="#353438"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp">

            <ImageView
                android:id="@+id/four_seasons_hotel"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/four_seasons_hotel" />

            <ImageView
                android:id="@+id/elysium_hotel"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/four_seasons_hotel"
                android:src="@drawable/elysium_hotel" />

            <ImageView
                android:id="@+id/olympic_lagoon_resorts"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/elysium_hotel"
                android:src="@drawable/olympic_lagoon_resorts" />

            <ImageView
                android:id="@+id/amarande_hotel"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/olympic_lagoon_resorts"
                android:src="@drawable/amarande_hotel" />
        </RelativeLayout>

        <TextView
            android:id="@+id/find_by_property_type"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="650dp"
            android:text="Find By Property Type"
            android:textColor="#353438"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="660dp">

            <ImageView
                android:id="@+id/hotels"
                android:layout_width="122dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/hotels" />

            <ImageView
                android:id="@+id/apartments"
                android:layout_width="122dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/hotels"
                android:src="@drawable/apartments" />

            <ImageView
                android:id="@+id/villas"
                android:layout_width="122dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/apartments"
                android:src="@drawable/villas" />
        </RelativeLayout>

         <TextView
            android:id="@+id/four_seasons_hotel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="617dp"
            android:layout_marginLeft="9dp"
            android:text="Four Seasons Hotel"
            android:textColor="#E0FFFFFF"
            android:textSize="9sp"
             android:textStyle="bold"/>

        <TextView
            android:id="@+id/elysium_hotel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="617dp"
            android:layout_marginLeft="116dp"
            android:text="Elysium Hotel"
            android:textColor="#E0FFFFFF"
            android:textSize="9sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/olympic_lagoon_resorts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="617dp"
            android:layout_marginLeft="197dp"
            android:text="Olympic Lagoon Res"
            android:textColor="#E0FFFFFF"
            android:textSize="9sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/amarande_hotel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="617dp"
            android:layout_marginLeft="301dp"
            android:text="Amarande Hotel"
            android:textColor="#E0FFFFFF"
            android:textSize="9sp"
            android:textStyle="bold"/>

</FrameLayout>
</ScrollView>