<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginScreenFragment">

    <ImageView
        android:id="@+id/luxzio_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/luxzio_logo_transparent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="200dp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp"
        android:text="Welcome, "
        android:textAppearance="@style/welcome" />

    <TextView
        android:id="@+id/login_to_your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="231dp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp"
        android:text="Login to your account!"
        android:textAppearance="@style/login_to_your_account" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="308dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_boxes"
        android:hint="Email Address"
        android:textColorHint="#70FFFFFF"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:textColor="#E0FFFFFF"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/input_boxes"
        android:ems="10"
        android:inputType="text|textPassword"
        android:hint="Password"
        android:textColorHint="#70FFFFFF"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:textColor="#E0FFFFFF"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/login_button"
        android:text="Login"
        android:textSize="12sp"
        android:textColor="#28143D"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="268dp"
        android:layout_marginTop="415dp"
        android:gravity="top"
        android:text="Forgot Password?"
        android:textAppearance="@style/forgot_password" />

    <View
        android:id="@+id/line_left"
        android:layout_width="103dp"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/line" />

    <View
        android:id="@+id/line_right"
        android:layout_width="103dp"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="262.02dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/line" />


    <TextView
        android:id="@+id/dont_have_an_account"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="592dp"
        android:gravity="top"
        android:text="Don't have an account?"
        android:textAppearance="@style/dont_have_an_account" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="635dp"
        android:background="@drawable/sign_up_button"
        android:text="Sign Up"
        android:textSize="12sp"
        android:textColor="#E0FFFFFF"
        android:textStyle="bold"/>
</FrameLayout>