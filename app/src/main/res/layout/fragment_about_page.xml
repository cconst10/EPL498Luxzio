<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <RelativeLayout
        android:id="@+id/darkerGrayishPurpleSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#343331"
        android:gravity="center">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="550px"
            android:layout_height="550px"
            android:layout_centerInParent="true"
            android:src="@drawable/luxziologo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/darkPurpleSection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="120dp"
        android:background="#343331">

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:src="@drawable/four_seasons_hotel_about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="235dp"
            android:text="Four Seasons Hotel"
            android:textColor="#E0FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/star0"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/star"
            android:layout_below="@id/topImage"/>

        <ImageView
            android:id="@+id/star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/star" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:text="About \n\nAddress:\n\n\t67-69 Amathountos Avenue,\n\tAgios Tychonas, 4532 Limassol, Cyprus
\n\nMost Popular Facilities:\n\n\tBabysitting/Child services\n\tSteam room\n\tKid's clib\n\tYoga classes\n\t3 swimming pools\n\tConcierge\n\tRoom service\n\tEvening Entertainment\n\tWater Sports facilities on-site\n\tFitness Centre"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="425dp"/>
</FrameLayout>
